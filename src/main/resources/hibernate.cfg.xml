<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-5.0.dtd">

<hibernate-configuration>
   <session-factory>
   <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
   <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
   <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/mountains</property>
   <property name="hibernate.connection.username">root</property>
   <property name="hibernate.connection.password">1111</property>
   <property name="hibernate.hbm2ddl.auto">update</property>
   <property name="current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>
   <property name="show_sql">false</property>
   <mapping package="com.home.education.mountains"/>
</session-factory>
</hibernate-configuration>